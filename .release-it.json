{
    "git": {
        "commitMessage": "chore: Release v${version}"
    },
    "github": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": [
            "npm run build:docs"
        ]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "header": "# 更新日志",
            "infile": "./docs/CHANGELOG.md"
        }
    },
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json"
}
