{
    "git": {
        "commitMessage": "chore: Release v${version}",
        "commit": false,
        "tag": false,
        "push": false
    },
    "github": {
        "release": false
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": [
            "npm run build:docs"
        ]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "./docs/CHANGELOG.md",
            "preset": "angular",
            "header": "# 更新日志"
        }
    },
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json"
}
