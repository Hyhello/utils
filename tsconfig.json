{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext", // 模块类型
        "moduleResolution": "node",
        "allowJs": false, // 是否编辑js文件
        "strict": true, // 严格模式
        "importHelpers": true,
        "noUnusedLocals": true, // 未使用变量报错
        "experimentalDecorators": true, // 启动装饰器
        "resolveJsonModule": true, // 加载json
        "removeComments": true, // 删除注释
        "esModuleInterop": true,
        "lib": ["esnext", "dom"], // 导入库类型定义
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src",
        "types" // 导入目录
    ],
    "exclude": [
        "node_modules"
    ]
}
