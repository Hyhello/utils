{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2015",
        "moduleResolution": "node",
        "module": "esnext", // 模块类型
        "allowJs": false, // 是否编辑js文件
        "strict": true, // 严格模式
        "noEmit": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src"
    ]
}
