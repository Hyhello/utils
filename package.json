{
    "name": "@hyhello/utils",
    "version": "1.3.2",
    "description": "前端业务常用工具函数库",
    "main": "lib/index.min.js",
    "types": "./types/index.d.ts",
    "files": [
        "lib",
        "types"
    ],
    "scripts": {
        "test": "jest",
        "release": "release-it",
        "gc": "bash scripts/gc.sh",
        "postinstall": "husky install",
        "build": "node scripts/build.js",
        "test:coverage": "jest --coverage",
        "lint": "tsc && eslint --ext .ts src",
        "build:docs": "node ./scripts/docs.js",
        "serve:docs": "docsify serve ./docs --open"
    },
    "keywords": [
        "@hyhello/utils",
        "@hyhello/tools",
        "hyhello",
        "brower",
        "node",
        "utils",
        "tools",
        "前端业务常用工具函数库"
    ],
    "author": "Hyhello",
    "license": "MIT",
    "homepage": "https://hyhello.github.io/utils/",
    "bugs": {
        "url": "https://github.com/Hyhello/utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Hyhello/utils.git"
    },
    "release-it": {
        "hooks": {
            "before:init": [
                "npm run lint",
                "npm run test"
            ],
            "after:bump": [
                "npm run build",
                "npm run build:docs"
            ]
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular",
                "infile": "./docs/CHANGELOG.md"
            }
        }
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "lint-staged": {
        "packages/**/*.{js,ts}": [
            "npm run lint --fix"
        ]
    },
    "directories": {
        "lib": "lib"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^5.0.0",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.34",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "del": "^6.1.0",
        "docsify-cli": "^4.4.4",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.2.2",
        "eslint-plugin-prettier": "^4.0.0",
        "fast-glob": "^3.2.11",
        "fs-extra": "^10.1.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "lint-staged": "^12.4.1",
        "prettier": "^2.6.2",
        "release-it": "^15.0.0",
        "rollup": "^2.73.0",
        "rollup-plugin-filesize": "^9.1.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.2",
        "ts-jest": "^28.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4"
    }
}
