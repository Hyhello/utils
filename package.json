{
    "name": "@hyhello/utils",
    "version": "1.3.1",
    "description": "前端业务常用工具函数库",
    "main": "lib/index.min.js",
    "types": "./types/index.d.ts",
    "files": [
        "lib",
        "types"
    ],
    "scripts": {
        "test": "jest",
        "release": "release-it",
        "gc": "bash scripts/gc.sh",
        "postinstall": "husky install",
        "build": "node scripts/build.js",
        "test:coverage": "jest --coverage",
        "build:docs": "node ./scripts/docs.js",
        "serve:docs": "docsify serve ./docs --open",
        "lint": "tsc --noEmit && eslint --ext .ts src"
    },
    "keywords": [
        "@hyhello/utils",
        "@hyhello/tools",
        "hyhello",
        "brower",
        "node",
        "utils",
        "tools",
        "前端业务常用工具函数库"
    ],
    "author": "Hyhello",
    "license": "MIT",
    "homepage": "https://hyhello.github.io/utils/",
    "bugs": {
        "url": "https://github.com/Hyhello/utils/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Hyhello/utils.git"
    },
    "release-it": {
        "hooks": {
            "before:init": [
                "npm run lint",
                "npm run test"
            ],
            "after:bump": [
                "npm run build",
                "npm run build:docs"
            ]
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular",
                "infile": "./docs/CHANGELOG.md"
            }
        }
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "engines": {
        "node": ">=4.0.0"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^4.2.1",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@types/jest": "^27.0.3",
        "@types/node": "*",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "chalk": "^4.1.2",
        "del": "^6.1.0",
        "docsify-cli": "^4.4.3",
        "eslint": "7.5.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-prettier": "^3.4.1",
        "fast-glob": "^3.2.7",
        "fs-extra": "^10.0.0",
        "husky": "^7.0.2",
        "jest": "^27.0.6",
        "jest-environment-jsdom": "^27.0.6",
        "prettier": "^2.3.2",
        "release-it": "^14.12.5",
        "rollup": "^2.59.0",
        "rollup-plugin-filesize": "^9.1.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.1",
        "ts-jest": "^27.0.7",
        "tslib": "*",
        "typescript": "^3.7.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "directories": {
        "lib": "lib"
    }
}
